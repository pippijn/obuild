open build/C

CFLAGS		= -ggdb3 -I $(INCDIR)


c-program () =
  PROGRAM = $(CProgramInstall $(Target).staging, $(BINDIR), $(Target), $(Sources))
  $(PROGRAM): $(Headers) $(InstallHeaders)

  foreach (NAME, $(InstallHeaders)):
    private.INCLUDE	= $(INCDIR)/$(NAME)

    $(INCLUDE): $(NAME) $(INCDIR)
          ln-or-cp $< $@

    $(PROGRAM): $(INCLUDE)

  .DEFAULT: $(PROGRAM)
