.PHONY: check

$(testresultdir):
  mkdir -p $@


private.parse-tools () =
  TOOLS[] = $(EMPTY)
  awk (runtests.ml)
  case $'tool = "\(.*\)";'
    TOOLS += $1
    export
  value $(TOOLS)


public.testsuite (tag) =
  Name			= runtests
  Modules[]		= Runtests
  OCaml-Requires[]	= baselib
  Languages		= ocaml
  MainLanguage		= ocaml

  private.RESULT	= $(testresultdir)/$(tag).rst
  private.TOOLS		= $(addprefix $(bindir)/, $(addsuffix $(EXEEXT), $(parse-tools)))
  private.DRIVER	= $(program check)

  testsuite.rst: $(DRIVER) $(TOOLS)
    $< $(rootdir) $(removeprefix $(fullname $(builddir)), $(fullname .))

  $(RESULT): testsuite.rst $(testresultdir)
    mv $< $@

  .DEFAULT: testsuite.rst
  check: $(RESULT)

  export
