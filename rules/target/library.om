open rules/target/common


private.language-library () =
  if $(equal ocaml, $(Language)):
    value $(ocaml-library)
  elseif $(or $(equal cxx, $(Language)), $(equal c, $(Language))):
    # C and C++ share rules.
    value $(c-library $(Name), $(Sources))
  else
    msg-error ($"no library rules for language: `$(Language)' for $(Name)")


private.language-library-install () =
  if $(equal ocaml, $(Language)):
    value $(ocaml-library-install)
  elseif $(or $(equal cxx, $(Language)), $(equal c, $(Language))):
    # C and C++ share rules.
    value $(c-library-install $(Name), $(Sources))
  else
    msg-error ($"no library rules for language: `$(Language)' for $(Name)")


library (tag) =
  private.timer = $(timer-start library)
  target-common ()

  # Make target, bind to build-tag.
  private.TARGET = $(language-library)
  $(tag): $(TARGET)

  timer-end ($(timer))

  # Export environment, return targets.
  value $(TARGET)
  export


library-install (tag) =
  private.timer = $(timer-start library-install)
  target-common ()

  # Make target, bind to build-tag.
  private.TARGET = $(language-library-install)
  $(tag): $(TARGET)

  timer-end ($(timer))

  # Export environment, return targets.
  value $(TARGET)
  export
