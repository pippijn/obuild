.PHONY: install-ocaml
install: install-ocaml

install-ocaml:
  foreach (lib, $(glob D, $(ocaml-libdir)/*)):
    libname = $(basename $(lib))
    switch $(libname)
    case stublibs:
      # Do nothing for stublibs, they are installed by ocamlfind.
    default:
      $(OCAMLFIND) remove -destdir $(OCAMLFIND_DESTDIR) $(libname)
      $(OCAMLFIND) install -destdir $(OCAMLFIND_DESTDIR) $(libname) $(glob $(lib)/*)
